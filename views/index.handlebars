

<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="br">Burger Name:</label>
    <input type="text" id="br" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" id="ateburger" name="devoured" value="1"> Yes!<br>
    <input type="radio" id="didnoteatburger" name="devoured" value="0"> No!
  </div>

  <button type="submit">Add a Burger</button>
</form>
